<!DOCTYPE html>
<html lang="{{@site.locale}}">
<head>
	{{! Document Settings }}
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge">

	{{! Page Meta }}
	<title>{{meta_title}}</title>
	<meta name="HandheldFriendly" content="True">
	<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">

	<link rel="shortcut icon" href="{{asset "favicon.ico"}}">

	{{! Styles and Scripts }}
	<link rel="stylesheet" type="text/css" href="{{asset "styles/build/style.css"}}">
	<link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Oxygen:400,700">
	
	{{! Prefetch next page and previous pages, if they exist }}
	{{#if pagination.next}}<link href="{{page_url pagination.next}}" rel="prefetch">{{/if}}
	{{#if pagination.prev}}<link href="{{page_url pagination.prev}}" rel="prefetch">{{/if}}

	{{! Ghost outputs important style and meta data with this tag }}
    {{ghost_head}}
</head>
<body class="{{body_class}}
	{{#is "home, index, tag, author"}} fancy-header
		{{#if @site.cover_image}} blog-has-cover{{/if}}
		{{#if @site.logo}} blog-has-logo{{/if}}
		{{#if primary_author.cover_image}} author-has-cover{{/if}}
		{{#if primary_author.profile_image}} author-has-image{{/if}}
	"
		{{#if primary_author.cover_image}}style="background-image: url({{primary_author.cover_image}});"{{else if @site.cover_image}}style="background-image: url({{@site.cover_image}});"{{/if}}
	{{/is}}>

	<div class="site-main">

		<header class="site-header">
			{{#if @site.logo}}<a href="{{@site.url}}"><img class="blog-logo" src="{{@site.logo}}" alt="Blog Logo" /></a>{{/if}}
			{{#if @site.title}}{{#is "home"}}<h1 class="blog-title">{{@site.title}}</h1>{{else}}<div class="blog-title"><a href="{{@site.url}}">{{@site.title}}</a></div>{{/is}}{{/if}}
			{{#if @site.description}}<p class="blog-description">{{@site.description}}</p>{{/if}}

			{{navigation}}
		</header>
	
		
		{{! Everything else gets inserted here }}
		{{{body}}}

		<footer class="site-footer">
			<a class="subscribe icon-feed" href="{{@site.url}}/rss/"><span class="tooltip">RSS</span></a>
			<div class="inner">
				<section class="copyright">{{t "All content copyright"}} <a href="{{@site.url}}/">{{@site.title}}</a> &copy; {{date format="YYYY"}} &bull; {{t "All rights reserved."}}</section>
				<section class="poweredby">{{{t "Proudly published with {ghostlink}" ghostlink="<a class=\"icon-ghost\" href=\"https://ghost.org\">Ghost</a>"}}}</section>
				<section class="themeinfo"><a href="http://scotthsmith.com/projects/decode/">Decode</a> {{t "by"}} <a href="http://scotthsmith.com">Scott Smith</a></section>
			</div>
		</footer>

	</div> {{! end .site-main }}

	{{#is "post, page"}}
		<script async src="{{asset "scripts/build/main.js"}}"></script>
	{{/is}}

	{{! Ghost outputs important scripts and data with this tag }}
	{{ghost_foot}}

</body>
</html>