{
	"name": "decode",
	"version": "1.0.0",
	"description": "A minimal, modern Ghost blog theme.",
	"keywords": [
		"ghost",
		"theme",
		"ghost-theme"
	],
	"author": {
		"name": "Scott Smith",
		"email": "mail@ScottHSmith.com",
		"url": "https://ScottHSmith.com"
	},
	"license": "MIT",
	"type": "module",
	"engines": {
		"ghost": ">=5.54.1"
	},
	"gpm": {
		"type": "theme",
		"categories": [
			"Minimal",
			"Personal Blogs"
		]
	},
	"demo": "https://decode-ghost-demo.scotthsmith.com/",
	"homepage": "https://scotthsmith.com/miscellanea/decode-archive/",
	"repository": {
		"type": "git",
