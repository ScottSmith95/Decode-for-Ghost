		"test": "gscan ./"
	},
	"devDependencies": {
		"adm-zip": "^0.5.16",
		"autoprefixer": "^10.4.21",
		"cssnano": "^7.0.6",
		"gscan": "^4.49.7",
		"gulp": "^5.0.0",
		"gulp-postcss": "^10.0.0",
		"gulp-sourcemaps": "^3.0.0",
		"gulp-terser": "^2.1.0",
		"postcss-custom-properties": "^14.0.4",
		"postcss-import": "^16.1.0",
		"postcss-nested": "^7.0.2",
		"postcss-normalize": "^13.0.1",
		"postcss-sort-media-queries": "^5.2.0"
	},
	"browserslist": [
		"last 2 versions",
		"> 2.5%",
		"Firefox ESR"
